<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/recruit_tv"
            android:text="@string/contact" />

        <TextView
            android:id="@+id/contact_tv"
            style="@style/recruit_tv"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical" />
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:padding="5dp"-->
        <!--android:text="@{model.type}"-->
        <!--android:textSize="17dp" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/recruit_tv"
            android:text="@string/phones" />

        <TextView
            android:id="@+id/phone_tv"
            style="@style/recruit_tv"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/recruit_tv"
            android:text="@string/i_date" />

        <TextView
            android:id="@+id/issue_date_tv"
            style="@style/recruit_tv"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/recruit_tv"
            android:text="@string/v_date" />

        <TextView
            android:id="@+id/valid_date_tv"
            style="@style/recruit_tv"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/recruit_tv"
            android:text="@string/location" />

        <TextView
            android:id="@+id/location_tv"
            style="@style/recruit_tv"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/recruit_tv"
            android:text="@string/remark" />

        <TextView
            android:id="@+id/remarks_tv"
            style="@style/recruit_tv"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/share_recruit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape_form_btn1"
            android:layout_toStartOf="@+id/status_btn3"
            android:layout_marginEnd="10dp"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="点击分享"
            android:textColor="@color/red_all"
            android:textSize="13sp" />
        <Button
            android:id="@+id/status_btn3"
            android:text="点击完成"
            android:textColor="@color/red_all"
            android:background="@drawable/shape_form_btn1"
            android:layout_alignParentEnd="true"
            android:textSize="13sp"
            android:paddingTop="3dp"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/status_btn4"
            android:visibility="gone"
            android:text="已完成"
            android:textColor="@color/red_all"
            android:background="@drawable/shape_form_btn2"
            android:layout_alignParentEnd="true"
            android:textSize="13sp"
            android:paddingTop="3dp"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </RelativeLayout>
    <include layout="@layout/divider_1dp_rcy"/>
</LinearLayout>
